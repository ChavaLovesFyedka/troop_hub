<%= form_for(@adult) do |f| %>
  <%= f.label :adult_role, "Leader", :value => "Leader"  %>
  <%= f.radio_button :adult_role, "Leader" %>
  <%= f.label :adult_role, "Volunteer", :value => "Volunteer"  %>
  <%= f.radio_button :adult_role, "Volunteer" %>
  <%= f.label :adult_role, "Parent", :value => "Parent" %>
  <%= f.radio_button :adult_role, "Parent" %>
  <br><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <br/>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>
    <br/>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %><br/>

  
  <% @skills.each do |skill| %>
    <%= label_tag "skills_#{skill.id}", skill.name %>
    <%= check_box_tag "adult[skill_ids][]", skill.id, false, id: "skill_#{skill.id}"%> 
    <%= text_field_tag "adult[descriptions][]" %> 
    <br>
  <% end %>
  
    <br/>

<%= f.submit %>
    <br/>
<% end %>


