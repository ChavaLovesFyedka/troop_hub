<center><h2>Calendar of Events</h2></center>

<%= calendar @troop_events do |e| %>
<% if e.troop_id == @troop.id %>
  <div><a href ="/troop_events/<%=e.id%>"><%= e.event.name %></a></div>
  <%end%>
<% end %>
<br/>

<center><h2>Photos</h2></center>

<%=link_to("Photos", troop_photos_path(@troop))%>

<%@photos.each do |photo| %>
    <p>
        <%=image_tag photo.pic_url%>
        <%= form_tag("/photos/#{@troop.id}/troop/#{photo.id}", method: "delete") do %>
            <%= submit_tag 'Delete' %>
        <%end%>
    </p>
<%end%>

<%= render partial: "/photos/photo_upload", locals: {:type => "troop", :id => @troop.id} %></br>
<%= link_to 'Back', troops_path %><br/>
