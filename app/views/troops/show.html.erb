<%= render '/layouts/navbar' %>
<center><h1><%= @troop.name %></h1>
<h6>Troop Number: <%= @troop.number %></h6>
<h6>Troop Type: <%= @troop.troop_type %> </h6></center>
</br>

<p><b>About Us:</b> <%=@troop.about_us %></p>
<br/>
<br/>
<%= link_to 'Troop Members Listing', troop_scouts_path(@troop) %>
</br>
</br>
<%= link_to 'Add a troop member', new_troop_scout_path(@troop) %>
</br>
</br>
<center><h2>Calendar of Events</h2></center>

<%= calendar @troop_events do |e| %>
<% if e.troop_id == @troop.id %>
  <div><a href ="/troop_events/<%=e.id%>"><%= e.event.name %></a></div>
  <%end%>
<% end %>
<br/>

<center><h2>Photos</h2></center>
<%@photos.each do |photo| %>
    <p>
        <%=image_tag photo.pic_url%>
        <%= form_tag("/photos/#{@troop.id}/troop/#{photo.id}", method: "delete") do %>
            <%= submit_tag 'Delete' %>
        <%end%>
    </p>
<%end%>

<%= render partial: "image_upload", locals: {:type => "troop", :id => @troop.id} %></br>
