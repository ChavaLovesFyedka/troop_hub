<%=render partial: 'layouts/banner', locals: {:name => "troop hub", :left_option => "The Social Media Site for Girl Scouts", :right_option => "Search Activities, Create Events, and Organize Your Troops! " }%>

    <!-- Page Wrapper -->
    <div class="wrapper">
      <!-- Inner Content -->
      <div class="inner-page padd">
      
        <!-- Blog Start -->
          
        <div class="blog">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <!-- The new post done by user's all in the post block -->
                <div class="blog-post">
                  <!-- Entry is the one post for each user -->

                  <% @news.each do |article| %>
                  <div class="entry">
                    <!-- Post Images -->
                    <div class="blog-img pull-left">
                      <img src="<%= article.photo %>" class="img-responsive img-thumbnail" alt="" />
                    </div>
                    <!-- Meta for this block -->
                    <div class="meta">
                      <i class="fa fa-calendar"></i>&nbsp; <%= article.formatted_date %>
                      <span class="pull-right"><i class="fa fa-comment"></i> <a href="/troops/<%=article.troop_id%>"><%= article.find_troop_name(article.troop_id) %></a></span>
                    </div>
                    <!-- Heading of the  post -->
                    <h3><a href="blog-single.html"><%= article.headline %> </a></h3>
                    <hr /><!-- Horizontal line -->
                    <!-- Paragraph -->
                    <p><%= article.body %></p>
                    <div class="clearfix"></div>
                  </div>
                <% end %>
 
                  
                </div>
              </div> <!--/ Main blog column end -->
              <div class="col-md-4">
                <!-- Blog page sidebar -->
                <div class="blog-sidebar">
                  <div class="row">
                    <div class="col-md-12 col-sm-6">
                      <!-- Blog sidebar page widget -->
                      <div class="sidebar-widget">
                        <!-- Widget Heading -->
                        <h4>Search for Troops</h4>
                        <!-- search button and input box -->
                          <%= render partial: 'troops/search'%>
                      </div><!--/ Widget end -->
                    </div>
                    <div class="col-md-12 col-sm-6">
                      <!-- Blog sidebar page widget -->
                      <div class="sidebar-widget">
                        <!-- Widget Heading -->
                        <h4>Search for Events</h4>
                        <!-- search button and input box -->
                       <%= render partial: 'events/search'%>
                       <br>
                       <center>
                       <%= render partial: 'events/advanced_search'%>
                     </center>
                      </div><!--/ Widget end -->
                    </div>


                    <div class="col-md-12 col-sm-6">
                      <!-- Blog sidebar page widget -->
                      <div class="sidebar-widget">
                   
                       <a class="twitter-timeline" href="https://twitter.com/girlscouts" data-widget-id="455791178433044480">Tweets by @girlscouts</a>
                      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                      </div><!--/ Widget end -->
                    </div>
                   
                    
                </div><!--/ Page sidebar end -->
              </div>
            </div><!--/ Row end -->
          </div>
        </div>
        
        <!-- Blog End -->   

        
      </div><!-- / Inner Page Content End --> 
      
    
    </div><!-- / Wrapper End -->
    
    
    