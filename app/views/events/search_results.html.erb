<%=render partial: 'layouts/banner', locals: {:name => "Search Results", :left_option => "TBD", :right_option => "TBD" }%>

<% @events.each do |event| %>
    Name: <%= event.name %><br/>
    Grades: 
    <% event.age_levels.each do |age_level|%>
        <%=age_level.name%>, 
    <%end%>
    <br/>
    Genre: <%= event.genre %><br/>
    Description: <%= event.description %><br/>
    Season: <%= event.season %><br/>
    Location: <%= event.location %><br/>
    Possible Badges:
    <% event.badges.each do |i| %>
        <%= i.name %>, 
    <%end%>
    <!-- kill the last comma here. also above with troops -->
    <%= form_tag ("/troops_events/new") do %>



        <%= submit_tag 'Add Event to Calendar' %>
    <%end%>
<%end%>

<%= link_to 'Back To All Events', events_index_path %>
