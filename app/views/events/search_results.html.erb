
<%=render partial: 'layouts/banner', locals: {:name => "Search Results", :left_option => "Events", :right_option => "Events" }%>
<br/>
<br/>

<% @events.each do |event| %>
    Name: <%= event.name %><br/>
    Grades: 
    <% event.age_levels.each_with_index do |age_level, i|%>
        <%if i+1==event.age_levels.length%>
          <%=age_level.name%>
        <%else%>
          <%=age_level.name%>,
        <%end%>
    <%end%>
    <br/>
    Genre: <%= event.genre %><br/>
    Description: <%= event.description %><br/>
    Season: <%= event.season %><br/>
    Location: <%= event.location %><br/>
    Possible Badges:
    <% event.badges.each_with_index do |badge, i|%>
        <%if i+1==event.badges.length%>
            <%=badge.name%>
        <%else%>
            <%=badge.name%>,
        <%end%>
    <%end%>
    <%= form_tag ("/troops_events/new") do %>



        <%= submit_tag 'Add Event to Calendar' %>
    <%end%>
<%end%>

<%= link_to 'Back To All Events', events_index_path %>
