<%= form_tag("/events/search", method: "get", class: "form-inline") do %>

  <div class="input-group">
    <%= text_field_tag(:'event[name]', nil, placeholder: 'Search by event name here', class: 'form-control')%>
    <span class="input-group-btn">
      <button class="btn btn-danger" type="submit"><i class="fa fa-search">Search</i></button>
    </span>
  </div>
<% end %>
