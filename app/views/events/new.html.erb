<%= form_for @event do |f| %>
    <%= f.label :event_Name %>
    <%= f.text_field :name %>
    </br>
    <%= f.label :appropriate_Ages %>
    <%= f.text_field :grades %>
    </br>
    <%= f.label :Type_of_Event %>
    <%= f.text_field :genre %>
    </br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </br>
    <%= f.label :season %>   
    <%= f.text_field :season %>
    </br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    </br>
    <%=f.collection_check_boxes(:badge_ids, @badges, :id, :name)%>
    </br>
  <%= f.submit %>
<% end %>