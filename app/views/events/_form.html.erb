<%= form_for @event do |f| %>
<div class="form-group">
  <center>  
    <%= f.label :event_Name %>
    <%= f.text_field :name, :class => "form-control" %>
    </br>
<!--     <%#= f.label :appropriate_Ages %>
    <%#= f.text_field :grades %> -->
<%=f.collection_check_boxes(:age_level_ids, @age_levels, :id, :name, :item_wrapper_class => 'form-control' )%>

    </br>
    <%= f.label :Type_of_Event %>
    <%= f.text_field :genre, :class => "form-control" %>
    </br>
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
    </br>
    <%= f.label :skill %>
    <%= f.collection_select(:skill_id, @skills, :id, :name) %>
    </br>
    <%= label_tag(:'event_season', "Event season:") %>
    <%= select_tag(:"event[season]", options_for_select([['Any', 'Any'],
    ['Spring', 'Spring'],
    ['Summer', "Summer"],
    ['Fall', "Fall"],
    ['Winter', 'Winter'],
    ['January', 'January'],
    ['Febuary', 'Febuary'],
    ['March', 'March'],
    ['April', 'April'],
    ['May', 'May'],
    ['June', 'June'],
    ['July', 'July'],
    ['August', 'August'],
    ['September', 'September'],
    ['October', 'October'],
    ['November', "November"],
    ['December', 'December'],
    ['New Years', 'New Years'],
    ['Independence Day', 'Independence Day']], 1), :class => "form-control") %>
    </br>
    <%= f.label :location %>
    <%= f.text_field :location, :class => "form-control"  %>
    </br>
    <%#=f.collection_check_boxes(:badge_ids, @badges, :id, :name)%>
    <!-- </br> -->

  <%= f.submit %>
<% end %>
</div>


