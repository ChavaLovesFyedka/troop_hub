    ['Fall', "Fall"],
    ['Winter', 'Winter'],
    ['January', 'January'],
    ['Febuary', 'Febuary'],
    ['March', 'March'],
    ['April', 'April'],
    ['May', 'May'],
    ['June', 'June'],
    ['July', 'July'],
    ['August', 'August'],
    ['September', 'September'],
    ['October', 'October'],
    ['November', "November"],
    ['December', 'December'],
    ['New Years', 'New Years'],
    ['Independence Day', 'Independence Day']], 1))%>
    </br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    </br>
    <%=f.collection_check_boxes(:badge_ids, @badges, :id, :name)%>
    </br>

  <%= f.submit %>
